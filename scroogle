# Output file
output_file = "scratch_projects.json"

# Function to fetch projects for a user
def get_user_projects(username):
    user_data = {"username": username, "projects": []}
    try:
        # Create a User object
        user = scratch.get_user(username)

        # Fetch projects from the user's profile
        projects = user.projects()

        # Collect project details
        for project in projects:
            user_data["projects"].append({
                "title": project.title,
                "id": project.id,
                "loves": project.loves
            })
    except Exception as e:
        user_data["error"] = str(e)
    return user_data

# Fetch projects for all users
all_users_data = []
for username in usernames:
    print(f"Fetching projects for {username}...")
    user_data = get_user_projects(username)
    all_users_data.append(user_data)

# Save data to JSON file
with open(output_file, "w") as file:
    json.dump(all_users_data, file, indent=4)

print(f"Data saved to {output_file}")
